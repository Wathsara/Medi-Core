                </div>

                <!-- End Right Column -->
            </div>

            <!-- End Grid -->
        </div>

        <!--modal to create sub group-->
        <div id="createSubGroup" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
